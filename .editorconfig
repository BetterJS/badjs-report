# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Tabs in JS unless otherwise specified
[**.js]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 4

[**.css]
indent_style = space
indent_size = 4

[**.sass]
indent_style = space
indent_size = 4
